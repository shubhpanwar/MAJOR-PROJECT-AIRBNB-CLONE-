<% layout("/layouts/boilerplate") %>

    <h1>All Listings</h1>
    <!-- <form method="GET" action="/listings/new">
        <button type="submit">Add New Listing</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
<% for(let listing of allListings) { %>

    <div class="card">
        <a href="/listings/<%= listing._id %>">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem; cursor: pointer;">
        <div class="card-img-overlay"></div>
        </a>
    
        <div class="card-body">
          <p class="card-text"> <%= listing.title %></p>
          <!-- <p class="card-text"> <%= listing.description %></p> -->
          <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %> / night</p>
          <p class="card-text"> <%= listing.location %></p>
          <p class="card-text"> <%= listing.country %></p>
          <a href="/listings/<%= listing._id %>" class="btn btn-primary">View Listing</a>
        </div>
      </div>
  
<% } %>
</div>
    
