<% layout("/layouts/boilerplate") %>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">
            <h1 class="text-center mb-4">Listing Details</h1>
            
            <div class="row">
                <!-- Image Section -->
                <div class="col-lg-6 col-md-12 mb-4">
                    <div class="card">
                        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
                    </div>
                </div>
                
                <!-- Details Section -->
                <div class="col-lg-6 col-md-12">
                    <div class="card h-100">
                        <div class="card-body">
                            <h2 class="card-title"><%= listing.title %></h2>
                            <hr>
                            <p class="card-text"><%= listing.description %></p>
                            
                            <div class="row mt-4">
                                <div class="col-6">
                                    <h6 class="text-muted">Price</h6>
                                    <p class="h4 text-success">â‚¹<%= listing.price.toLocaleString("en-IN") %> / night</p>
                                </div>
                                <div class="col-6">
                                    <h6 class="text-muted">Location</h6>
                                    <p class="h5"><%= listing.location %></p>
                                    <p class="text-muted"><%= listing.country %></p>
                                </div>
                            </div>
                            
                            <!-- Action Buttons -->
                            <div class="mt-4 d-grid gap-2">
                                <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning">
                                    <i class="fas fa-edit"></i> Edit Listing
                                </a>
                                <form method="POST" action="/listings/<%= listing._id %>/delete" class="d-inline">
                                    <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Are you sure you want to delete this listing?')">
                                        <i class="fas fa-trash"></i> Delete Listing
                                    </button>
                                </form>
                                <a href="/listings" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Back to Listings
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
