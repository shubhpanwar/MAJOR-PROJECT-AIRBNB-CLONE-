<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">


    <h1>Edit Listing</h1>
    <form method="POST" action="/listings/<%= listing._id %>/update">
    <div>
        <label for="title" class ="form-label">Title</label>
            <input name="title" value="<%= listing.title %>" type="text" class="form-control">
    </div>
    <div>
        <label for="description" class ="form-label">Description</label>
        <input name="description" value="<%= listing.description %>" type="text" class="form-control">
    </div>
    <div>
        <label for="image" class="form-label">Image Link</label>
        <input
        name="image" value="<%= listing.image.url %>" type="text" class="form-control"/>
    </div>
    <div>
        <label for="price" class ="form-label">Price</label>
        <input name="price" value="<%= listing.price %>" type="number" class="form-control">
    </div>
    <div>
        <label for="Location" class ="form-label">Location</label>
        <input name="location" value="<%= listing.location %>" type="text" class="form-control">
    </div>
    <div>
        <label for="country" class ="form-label">Country</label>
        <input name="country" value="<%= listing.country %>" type="text" class="form-control">
    </div>
    <br>

        <button type="submit" class="btn btn-dark edit-btn">Edit</button>
    </form>
</div>
</div>

